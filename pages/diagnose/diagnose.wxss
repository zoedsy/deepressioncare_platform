  .abnormal{
   display: -webkit-flex;
   display: flex;
   align-items: center;
   justify-content: space-between;
   border: 1px solid #bbb;
   margin-top: 5px;
   /* height: 20%; */
 }
 .abnormal-img{
   width: 20rpx;
   height: 20rpx;
   margin: 5px;
   border: 1px solid #bbb;
   flex: 1 1 auto;
 }
 .abnormal-box{
   height: 90rpx;
   overflow: hidden;
 }
 .abnormal-name{
   display: block;
   height: 40rpx;
   line-height: 40rpx;
   overflow: hidden;
   font-size: 35rpx;
 }
  .abnormal-detail{
   display: block;
   width: 400rpx;
   height:40rpx;
   line-height: 40rpx;
   overflow: hidden;
   font-size: 30rpx;
   color: #8f8f94;
   text-align: left;
   white-space: nowrap;  /* 所有的文本都显示在这一行*/
   text-overflow: ellipsis;  /* 多余的文本用省略号显示*/
 }
 .abnormal-left{padding-left: 10px;}
 .abnormal-right{padding-right: 10px;}
