/* pages/luntan/luntan.wxss */
.page{
  height:100vh;
  display:flex;
  flex-direction:column;
  box-sizing:border-box;
  position:relative;
}
.background{
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: -1;
}
/* 
.search{
  background: #fff;
} */
.searchBar{
  margin: 20rpx 30rpx;
  border-radius: 30px;
  border:1px solid #f5f5f5;
  background: #f5f5f5;
  height: 60rpx;
}
.weui-icon-search{
  margin-left: 15rpx;
  float: left;
}

  .list-block{
    height:100%;
    display:flex;
    box-sizing:border-box;
    flex-direction:column;
    align-items:center;
    justify-content:center;
    flex-wrap: wrap;
  }
  .goods-block{
    width:47%;
    height: 40%;
    margin: 6px;
    background: #fff;
    border-radius: 5px;
    /* position: relative; */
    float: left;
    /* display: block; */
    box-shadow: 0 0 10rpx 10rpx rgba(0, 0, 0, 0.1);
  }
  .postimage{
    height: 60%;
    width: 100%;
  }
  .good-info{
    height: 40%;
    width: 100%;
    position: relative;
  }
  .ava{
    /* width: 85rpx;
    height: 85rpx; */
    width: 85rpx;
    height: 85rpx;
    border-radius: 50%;
    position: absolute;
    top: 5%;
    left: 5%;
  }

  .title{
    width: 60%;
    font-size: 17px;
    color: #333333;
    font-weight: 600;
    position: absolute;
    top: 5%;
    left: 35%;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    word-break: break-all;
  }
  .date{
    color: #767676; 
    position: absolute;
    left: 5%;
    bottom: 5%;
    font-size: 27rpx;
  }
  .addr{
    color: #767676; 
    position: absolute;
    right: 5%;
    bottom: 5%;
    font-size: 27rpx;
  }
  .good-handle{
    width: 100%;
    display: inline-block;
  }
  .price{
    float: left;
  }
  /* .good-handle, .price{
    display: flex;
    flex-direction: row;
  } */
  .current-price{
    color: #ff2741;
    display: inline-block;
  }
  .original-price{
    color: #999999;
    text-decoration: line-through;
  }
  .sign image{
    margin-right: 15px;
    width: 30px;
    height: 20px;
    float: right;
  }

  .icon-baojingjilu{
    font-size: 100rpx;
    color:rgb(3, 56, 38);
    position: fixed;
    bottom: 20rpx;
    left: 50%;
    margin-left: -50rpx;
    z-index: 99;
  }

  


  