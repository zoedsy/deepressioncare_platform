/* pages/luntan/luntan.wxss */
.page{
  height:100%;
  display:flex;
  flex-direction:column;
  box-sizing:border-box;
  position:relative;
  top:0;
  left:0;
  bottom:0;
  right:0;
  background-color:#f5f8fa;
}

.search{
  background: #fff;
}
.searchBar{
  margin: 20rpx 30rpx;
  border-radius: 30px;
  border:1px solid #f5f5f5;
  background: #f5f5f5;
}
.weui-icon-search{
  margin-left: 15rpx;
  float: left;
}
.posts{
  position:fixed;
  width:10%;
  height:10%;
  bottom:0%;
  right: 45%;
  /* 使得图标悬浮 */
  z-index: 101;
}
  .list-block{
    height:100%;
    display:flex;
    box-sizing:border-box;
    flex-direction:column;
    align-items:center;
    justify-content:center;
    flex-wrap: wrap;
  }
  .goods-block{
    width:47%;
    height: 20%;
    margin: 6px;
    background: #fff;
    border-radius: 5px;
    position: relative;
    float: left;
    display: block;
  }
  .good-img image{
    width: 100%;
    height: 200px;
    border-radius: 20%;
  }
  .good-href{
    display: inline-block;
  }
  .title{
    font-size: 13px;
    color: #333333;
  }
  .desc{
    color: #767676; 
    display: inline-block;
  }
  .desc span{
    font-size: 13px;
    overflow : hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    margin: 5px;
  }
  .good-handle{
    width: 100%;
    display: inline-block;
  }
  .price{
    float: left;
  }
  /* .good-handle, .price{
    display: flex;
    flex-direction: row;
  } */
  .current-price{
    color: #ff2741;
    display: inline-block;
  }
  .original-price{
    color: #999999;
    text-decoration: line-through;
  }
  .sign image{
    margin-right: 15px;
    width: 30px;
    height: 20px;
    float: right;
  }


  