/* pages/luntan/release/selectCity/selectCity.wxss */
/*  */
.scroll-view{
  width: 100%;
  padding-bottom: 10px;
  height: calc(100vh);
}

.head-view {
  top: 0;
  z-index: 10;
  position: fixed;
  height: 40rpx;
  width: 100%;
  background-color: #F0F0F0;
  border-bottom-style: solid;
  border-color: rgb(220, 220, 220);
  border-width: 1px;
}
.tab-view {
  height: 30px;
  margin-left: 2.5%;
  width: 95%;
  margin-top: 5px;
  background-color: white;
  border-radius: 3px;
  color: rgb(197, 197, 197);
  font-size: 14px;
  line-height: 30px;
  text-align: center;
}
.temp-view {
  width: 100%;
  height: auto;
  margin-top: 40px;
}
.scoll-head-textView{
  width: 100%;
  background-color: white;
  min-height: 30px;
}
.title-text {
  width: 100%;
  padding-left: 20px;
  height: 30px;
  line-height: 30px;
  background-color: rgb(239, 239, 239);
  font-size: 14px;
  color: rgb(154, 154, 154);
}

/* 定位中... +全国 分别都有 */
.content-view{
  padding-left: 10px;
  padding-bottom: 10px;
  height: auto;
  width: 100%;
  flex-wrap: wrap;
}


.current-view{
  height: 30px;
  width:100%;
  border-style: solid;
  border-color: rgb(222, 222, 222);
  border-radius: 3PX;
  border-width: 1px;
  text-align: center;
  line-height: 30px;
  margin-left: 10px;
  font-size: 14px;
  padding-left: 10px;
  padding-right: 10px;
  margin-top: 10px;
  color: rgb(154, 154, 154);
}
.city-view {
  height: 30px;
  border-style: solid;
  border-color: rgb(222, 222, 222);
  border-radius: 3PX;
  border-width: 1px;
  text-align: center;
  line-height: 30px;
  margin-left: 10px;
  font-size: 14px;
  margin-top: 10px;
  color: rgb(154, 154, 154);
}
.commn-city-view {
  width: 100%;
  padding-left: 20px;
  height: 40px;
  font-size: 15px;
  line-height: 40px;
  color: rgb(80, 80, 80);
  border-bottom-style: solid;
  border-color: rgb(220, 220, 220);
  border-width: 1px;

}
::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}
.right-view{
  width: 20px;
  height: auto;
  position: fixed;
  z-index: 10;
  padding-top: 10px;
  right: 0px;
  padding-bottom: 10px;
}
.right-view text{
  font-size: 10px;
  text-align: center;
  max-height: 20px;
  width: 100%;
  color: #FC7222;
}

.search-back-view{
  width: 100%;
  height: 100%;
}
.search-view {
  height: 40px;
  width: 100%;
  background-color: #F0F0F0;
  border-bottom-style: solid;
  border-color: rgb(220, 220, 220);
  border-width: 1px;
}
.input-view{
  margin-left: 2.5%;
  width: 80%;
  height: 30px;
  margin-top: 5px;
  background-color: white;
  border-radius: 3px;
}
.cancel-text{
  width: 15%;
  height: 40px;
  line-height: 40px;
  font-size: 15px;
  text-align: center;
}
.icon-class{
  margin-top: 7.5px;
}
.serch-input{
  height: 30px;
  margin-left: 5px;
  line-height: 30px;
  width: 200px;
  font-size: 14px;
}
.search-left-view{
  height: 100%;
  width: 90%;
  padding-left: 5px;
}
.seach-right-view{
  height: 100%;
  width: 10%;
  padding-right: 5px;
}
.search-scroll{
  width: 100%;
  background-color: white;
  height: 100%;
}
.city-item-view{
  height: 40px;
  width: 95%;
  margin-left: 5%;
  border-bottom-style: solid;
  border-color: rgb(220, 220, 220);
  border-width: 1px;
  
}
.city-item-view text{
  height: 40px;
  font-size: 15px;
  width: 100%;
  line-height: 40px;
  color: rgb(80, 80, 80);
  
}