.audio_box{
    width: 98%;
    height: 150px;
    margin: 0 auto;
    box-shadow: 0 0 5px #000;
    border-radius: 5px 5px 5px 5px;
    border: 1px solid#a2a2a2;
    margin: 5px 0;
    margin-left: 3px;
}

.tip{
    position: relative;
    width: 360rpx;
    font-size: 28rpx;
    left: 50%;
    margin-left: -150rpx;
    top: -65%;
    font-size: 40rpx;
    color:rgb(126, 122, 122);
}
.history_box{
    width: 98%;
    height: 450px;
    margin: 0 auto;
    /* box-shadow: 0 0 2px #000; */
    border-radius: 5px 5px 5px 5px;
    /* padding: 3px; */
    /* background-color: #37d27b;  */
}
.history_box .title{
    border-top: solid #e9e9e9;
    height: 100rpx;
    border-bottom: solid #e9e9e9;
    text-align: center;
  }
  
  .history_box .title .name{
    color: #fccc9f;
    font-size: 40rpx;
    font-weight: 600;
    line-height: 100rpx;
  }

  .floor{
    border-bottom: solid #e9e9e9;
    display: flex;
    width: 100%;
    height: 250rpx;
  }
  .floor .picture{
    margin: 25rpx;
    width: 30%;
    height: 200rpx;
  }
  
  .floor .picture .img{
    width: 100%;
    height: 100%;
  }
  
  .floor .info{
    width: 60%;
    height: 100%;
  }
  .floor .info .info_title{
    font-weight: 700; 
    margin: 25rpx 0;
    overflow: hidden;
   /*超出隐藏*/
   text-overflow: ellipsis;
 }
  
  .floor .info .detail{
     font-weight: 500; 
     margin: 25rpx 0;
     display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    /* 英文拆分 */
    word-break: break-all;
    /*超出隐藏*/
    overflow: hidden;
    /*超出显示为省略号*/
    text-overflow: ellipsis;
  }
  
